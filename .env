# Redis
REDIS_URL=redis://redis:6379

# MySQL
MYSQL_DATABASE_URL=mysql://esms_user:esms_pass@mysql:3306/esms_db

# Database credentials (for docker-compose)
MYSQL_ROOT_PASSWORD=esms_password
MYSQL_DATABASE=esms_db
MYSQL_USER=esms_user
MYSQL_PASSWORD=esms_pass

# Server binding
BIND_ADDR=0.0.0.0:8080

# Serial Port
SERIAL_PORT=/dev/cu.usbmodem13401
USE_SERIAL=false

# TCP bridge settings
SERIAL_TCP_HOST=host.docker.internal
SERIAL_TCP_PORT=5555

# Logging
RUST_LOG=info